<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin</title>
    <style>
        * {
          box-sizing: border-box;
        }
        
        #myInput {
          background-position: 10px 10px;
          background-repeat: no-repeat;
          width: 800px;
          font-size: 16px;
          padding: 12px 20px 12px 40px;
          border: 1px solid #ddd;
          margin-bottom: 12px;
          /* margin-left: 400px; */
        }
        
        .Table {
          border-collapse: collapse;
          width: 100%;
          border: 1px solid #ddd;
          font-size: 18px;
        }

        .Table2 {
          border-collapse: collapse;
          width: 800px;
          border: 1px solid #ddd;
          font-size: 18px;
          /* margin-left: 400px; */
        }
        
        .Table th, .Table td, .Table2 th, .Table2 td {
          text-align: center;
          padding: 12px;
        }
        
        .Table tr, .Table2 tr {
          border-bottom: 1px solid #ddd;
        }
        
        .Table tr.header, .Table tr:hover, .Table2 tr.header, .Table2 tr:hover {
          background-color: #f1f1f1;
        }
        </style>
   
</head>
<body>

    <h1 style="margin-left: 730px;">Search Table</h1>
   
    <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for events.." title="Type in a name">

    <table border="1" id="myTable" class="Table2">
        <% let i=1; %>
            <tr class="header">
                <th>Events</th>
                <th>No. of Participants</th>
                <th>Data Table</th>
            </tr>
        <% while(i!=51) { %>
       <tr class="header">
           <% var m=0; %>
           <td><%= evjson[i]["event"] %></td>
           <% data.forEach(function(d) { %>
            <% d.events.forEach(function(ev) { %>
                <% if(ev == i) { %>
                    <% m++; %>
                <% } %>
            <% }); %>
        <% }); %>
            <td> <%= m %> </td>
            <td><a href="/evtable?value=<%= i %>">Table...</a></td>
       </tr>
       <% i++; } %>
    </table>

    <h1 style="text-align: center;">Main Table</h1>
    <table border="1" class="Table">
            <tr class="header">
                <th>Sl No.</th>
                <th>Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>No.</th>
                <th>college</th>
                <th>Events</th>
            </tr>
        <% let j=0; %>
        <% data.forEach(function(data){ %>
            <% j++; %>
            <tr>
                <td> <%= j %>.</td>
                <td> <%= data.name %> </td>
                <td> <%= data.username%> </td>
                <td> <%= data.gender%> </td>
                <td> <%= data.phone %> </td>
                <td> <%= data.college%> </td>
                <td> <%= data.events%> </td>
            </tr>
        <% }); %>
    </table>

    <script>
        function myFunction() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
            txtValue = td.textContent || td.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";
            } else {
                tr[i].style.display = "none";
            }
            }       
        }
        }
    </script>
</body>
</html>